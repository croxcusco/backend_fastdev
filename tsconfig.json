{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "src",
        "types": ["node"],
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowJs": true,
        "lib": ["ES2020", "DOM"],
        "esModuleInterop": true
    },
    //add :p
    "include": [
        "src/**/*"
    ]
}